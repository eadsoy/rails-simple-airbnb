<div>
  <nav class="navbar navbar-light bg-light">
    <%= link_to "Simple AirBnb", flats_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
      <%= link_to "Add Flat", new_flat_path, class: "text-muted" %>
    </button>
  </nav>
</div>


<h1>All Our Flats</h1>



<div class="container">
      <% @flats.each do |flat| %>
            <div class="card " style="width: 20rem;">
              <div class="card-body bg-light">
                <h5 class="card-title"><strong><%= flat.name %></strong></h5>
                <p class="card-text"><%= flat.address %></p>
                <div class="d-flex justify-content-start">
                  <h6 class="card-subtitle mb-2 m-2"><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %></h6>
                  <h6 class="card-subtitle mb-2 m-2"><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></h6>
                </div>
              </div>

              <div class="card-footer bg-white">
                <a href="#" class="card-link"><%= link_to 'More info', flat %></a>
                <a href="#" class="card-link bg-danger"><%= link_to 'Edit', edit_flat_path(flat) %> </a>
                <a href="#" class="card-link"><%= link_to 'Remove', flat_path(flat), method: :delete, data: { confirm: "are you sure?"} %></a>
              </div>
            </div>
      <% end %>
</div>
