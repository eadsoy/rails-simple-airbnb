<div class="card-product">
  <div class="card-product-infos">
    <h2><strong><%= @flat.name %></strong></h2>
    <p><%= @flat.address %></p>
  </div>
</div>

<div class="card-product">
  <div class="card-product-infos">
    <h4>A  bit more about this flat...</h4>
    <p><%= @flat.description %></p>
  </div>
</div>

<div class="card-product">
  <div class="card-product-infos">
    <h4>Details</h4>
    <div class="d-flex justify-content-start">
      <h6 class="card-subtitle mb-2 m-2"><i class="fas fa-user-friends"></i> <%= @flat.number_of_guests %></h6>
      <h6 class="card-subtitle mb-2 m-2"><i class="fas fa-euro-sign"></i> <%= @flat.price_per_night %></h6>
    </div>
  </div>
</div>



<%= link_to 'Edit', edit_flat_path(@flat) %> |
<%= link_to 'Back', flats_path %> |
<%= link_to "Destroy #{@flat.name}", flat_path(@flat), method: :delete, data: { confirm: "are you sure?"} %>
